<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.davidllorca.provider.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Providers examples"
        android:textSize="26sp" />

    <Button
        android:id="@+id/contact_provider_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickContentProvider"
        android:text="Contacts Content provider" />

    <Button
        android:id="@+id/own_contact_provider_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickOwnContentProvider"
        android:text="Own Content provider (Books)" />

</LinearLayout>
